@{
    ViewData["Title"] = "Home Page";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MakerSpaceEntryInterface.Models.LoginRequestModel

    <div class="text-center">
        <h1 class="display-4">MakerSpace</h1>

        <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>

        <form asp-controller="Home" asp-action="Index" method="post" class="">
            
            <p>

                <input asp-for="Username" placeholder="Username" class="form-control LoginForm"/>
            </p>
            <p>
                <input asp-for="Password"  type="password" placeholder="Password" class="form-control LoginForm"/>
            </p>

            <button type="submit" id="Unlock" class="btn btn-success">Unlock</button>
        </form>

        <p>
            Don't have access yet? <br /> Press @Html.ActionLink(linkText: "here", actionName: "Information", controllerName: "Home") to find out how to get access...
        </p>
    </div>
